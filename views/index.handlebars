<h1 id="header">YumYum Burgers!</h1>



<ul id="to-eat">
  <h2 class="title">Burgers that you've yet to eat!</h2>
  {{#each burgers}}
  {{#unless eaten}}
  {{> burgers/burger-block eaten=true}}
  {{/unless}}
  {{/each}}
</ul>



<ul id="eaten">
  <h2 class="title">Burgers that you've eaten!</h2>
  {{#each burgers}}
  {{#if eaten}}
  {{> burgers/burger-block eaten=false}}
  {{/if}}
  {{/each}}
</ul>


<div id="form">
  <h2 id="add">Add a burger</h2>
  <form class="create-form">

  <div class="form-group">
    <label for="burg" id="burger-name">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group eaten">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="0" checked> Yet to eat!<br>
    <input type="radio" name="eaten" value="1"> Eaten!
  </div>

  <button type="submit" id="btn">Add Burger</button>


</form>
</div>